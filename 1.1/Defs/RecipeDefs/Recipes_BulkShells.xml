<?xml version="1.0" encoding="utf-8"?>
<Defs>
	<RecipeDef Name="MakeShellsBulkBase" Abstract="True">
		<jobString>Making shells in bulk.</jobString>
		<workAmount>3600</workAmount>
		<workSpeedStat>GeneralLaborSpeed</workSpeedStat>
		<effectWorking>Cook</effectWorking>
		<soundWorking>Recipe_Machining</soundWorking>		
		<recipeUsers>
			<li>TableMachining</li>
		</recipeUsers>
	</RecipeDef>	
	<RecipeDef ParentName="MakeShellsBulkBase">
		<defName>Make_HEShellsBulk</defName>
		<label>make high-explosive shells in bulk</label>
		<description>Make five high-explosive shells from chemfuel and steel.</description>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>Steel</li>
					</thingDefs>
				</filter>
				<count>100</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>Chemfuel</li>
					</thingDefs>
				</filter>
				<count>50</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>Steel</li>
				<li>Chemfuel</li>
			</thingDefs>
		</fixedIngredientFilter>
		<products>
		  <Shell_HighExplosive>5</Shell_HighExplosive>
		</products>
	</RecipeDef>	
