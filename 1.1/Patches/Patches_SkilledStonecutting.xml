<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	<Operation Class = "PatchOperationSequence">
		<success>Always</success>
		<operations>
			<!-- tests whether Skilled Stonecutting's effects appear -->
			<!-- not testing by name or package bc this is more general -->
			<li Class="PatchOperationTest">
			  <xpath>/Defs/RecipeDef[@Name = "MakeStoneBlocksBase"]/workSkill</xpath>
			</li>
			<li Class="PatchOperationTest">
			  <xpath>/Defs/RecipeDef[@Name = "MakeStoneBlocksBase"]/workSkillLearnFactor</xpath>
			</li>
			<li Class="PatchOperationAdd">				
				<xpath>/Defs/RecipeDef[@Name = "MakeStoneBlocksBulkBase"]</xpath>
				<value>
						<workSkill>Crafting</workSkill>
						<workSkillLearnFactor>0.25</workSkillLearnFactor> 
				</value>
			</li>
			<li Class="PatchOperationReplace">
				<xpath>/Defs/RecipeDef[@Name = "MakeStoneBlocksBulkBase"]/workSpeedStat</xpath>
				<value>
						<workSpeedStat>StonecuttingSpeed</workSpeedStat>
				</value>
			</li>
		</operations>
	</Operation>
</Patch>